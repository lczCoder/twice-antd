{
	"compilerOptions": {
		"rootDir": ".",
		"declaration": true,
		"noEmit": true,
		"emitDeclarationOnly": false,
		"outDir": "dist",
		"target": "es6",
		"module": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"sourceMap": false,
		"jsx": "react",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"removeComments": true, //删除注释
		"downlevelIteration": true,
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declarationDir": "lib",
		// "noEmit": true,
		"isolatedModules": true,
		"baseUrl": ".",
		"paths": {
			"twice-antd": ["src/packages/index.ts"]
			// "twice-antd/esm/*": ["packages/*"],
			// "twice-antd/lib/*": ["packages/*"]
		}
	},
	"include": ["src/*", "package/global.d.tsbal.d.ts", "package"],
	// 过滤
	"exclude": [
		"node_modules",
		"dist"
		// "packages/**/*.stories.tsx",
		// "packages/**/*.test.tsx",
		// "packages/**/__example__"
	]
}
